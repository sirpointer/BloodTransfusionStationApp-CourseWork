@model BloodTransfusionStationApp.Models.Хранилища_крови

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Вы уверены что хотите удалить запись?</h3>
    <div>
        <h4>Хранилища_крови</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Группа крови
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Группа_крови)
            </dd>

            <dt>
                Расположение (номер кабинета)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Расположение__номер_кабинета_)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Назад ко всем записям", "Index")
            </div>
        }
    </div>
</body>
</html>
