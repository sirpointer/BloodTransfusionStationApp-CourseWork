@model IEnumerable<BloodTransfusionStationApp.Models.Отделы_хранилищ>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <br />
        @using (Html.BeginForm("Index", "Отделы_хранилищ", FormMethod.Get))
        {
            <p>
                Фильтрация по типу крови: @Html.TextBox("searchString")
                <br />
                <input type="submit" value="Фильтр" class="btn btn-default" />
            </p>
        }
        @ViewBag.Error
    </div>
    <br />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Тип_крови)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Объем)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Хранилища_крови.Группа_крови)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Тип_крови)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Объем)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Хранилища_крови.Группа_крови)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
