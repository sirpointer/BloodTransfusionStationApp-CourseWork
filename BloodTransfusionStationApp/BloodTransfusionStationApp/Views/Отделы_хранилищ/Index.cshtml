@model IEnumerable<BloodTransfusionStationApp.Models.Отделы_хранилищ>

@{
    ViewBag.Title = "Отделы хранилищ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отделы хранилищ</h2>
    <div>
        <br />
        @using (Html.BeginForm("Index", "Отделы_хранилищ", FormMethod.Get))
        {
            <p>
                Фильтрация по типу крови: @Html.TextBox("searchString")
                <br />
                <input type="submit" value="Фильтр" class="btn btn-default" />
            </p>
        }
        @ViewBag.Error
    </div>
    <br />
    <p>
        @Html.ActionLink("Создать новую", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Тип крови
            </th>
            <th>
                Группа крови
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Объем)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Тип_крови)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Хранилища_крови.Группа_крови)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Объем)
            </td>

            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
        }

    </table>
