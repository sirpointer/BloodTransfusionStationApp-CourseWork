@model BloodTransfusionStationApp.Models.Медицинское_оборудование

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Медицинское оборудование</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Наименование, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Наименование, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Наименование, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Дата_начала_эксплуатации, "Дата начала эксплуатации", htmlAttributes: new { @class = "control -label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Дата_начала_эксплуатации, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Дата_начала_эксплуатации, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Срок_окончания_эксплуатации, "Срок окончания эксплуатации", htmlAttributes: new { @class = "control -label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Срок_окончания_эксплуатации, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Срок_окончания_эксплуатации, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Расположение__номер_кабинета_, "Расположение (номер кабинета)", htmlAttributes: new { @class = "control -label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Расположение__номер_кабинета_, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Расположение__номер_кабинета_, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Номер_ответственного_сотрудника, "Ответственное лицо", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Номер_ответственного_сотрудника", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Номер_ответственного_сотрудника, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Создать" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Назад ко всем записям", "Index")
    </div>
</body>
</html>
