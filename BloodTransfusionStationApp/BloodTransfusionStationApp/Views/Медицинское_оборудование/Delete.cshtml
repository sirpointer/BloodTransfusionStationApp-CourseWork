@model BloodTransfusionStationApp.Models.Медицинское_оборудование

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Вы уверены что хотите удалить запись?</h3>
    <div>
        <h4>Медицинское оборудование</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Наименование)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Наименование)
            </dd>

            <dt>
                Дата начала эксплуатации
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Дата_начала_эксплуатации)
            </dd>

            <dt>
                Срок окончания эксплуатации
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Срок_окончания_эксплуатации)
            </dd>

            <dt>
                Расположение (номер кабинета)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Расположение__номер_кабинета_)
            </dd>

            <dt>
                Ответственное лицо
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Врачи.Фамилия)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Назад ко всем записям", "Index")
            </div>
        }
    </div>
</body>
</html>
