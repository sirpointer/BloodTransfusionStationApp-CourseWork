@model IEnumerable<BloodTransfusionStationApp.Models.Доноры>

@{
    ViewBag.Title = "Доноры";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Доноры</h2>

    <div>
        <br />
        @using (Html.BeginForm("Index", "Доноры", FormMethod.Get))
        {
            <p>
                Фильтрация по групе крови: @Html.TextBox("searchString")
                <br />
                <input type="submit" value="Фильтр" class="btn btn-default" />
            </p>
        }
        @ViewBag.Error
    </div>
    <br/>
    <p>
        @Html.ActionLink("Создать новую", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Имя)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Фамилия)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Отчество)
            </th>
            <th>
                Дата рождения
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Пол)
            </th>
            <th>
                Группа крови
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Телефон)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Адрес)
            </th>
            <th>
                Паспортные данные
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Имя)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Фамилия)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Отчество)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_рождения)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Пол)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Группа_крови)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Телефон)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Адрес)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Паспортные_данные)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Номер_донора }) |
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Номер_донора }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Номер_донора })
                </td>
            </tr>
        }

    </table>
