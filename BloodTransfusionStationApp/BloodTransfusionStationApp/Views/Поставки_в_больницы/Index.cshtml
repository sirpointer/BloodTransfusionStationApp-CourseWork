@model IEnumerable<BloodTransfusionStationApp.Models.Поставки_в_больницы>

@{
    ViewBag.Title = "Поставки в больницы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Поставки в больницы</h2>
    <div>
        <br />
        @using (Html.BeginForm("Index", "Поставки_в_больницы", FormMethod.Get))
        {
            <p>
                Дата поставки после: @Html.TextBox("searchString")
                <br />
                <input type="submit" value="Фильтр" class="btn btn-default" />
            </p>
        }
        @ViewBag.Error
    </div>
    <br />
    <p>
        @Html.ActionLink("Создать новую", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Название)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Адрес)
            </th>
            <th>
                Объем цельной крови
            </th>
            <th>
                Объем плазмы крови
            </th>
            <th>
                Объем имунной плазмы
            </th>
            <th>
                Объем эретроцитов крови
            </th>
            <th>
                Объем тромбоцитного концентрата
            </th>
            <th>
                Дата поставки
            </th>
            <th>
                Группа крови
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Название)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Адрес)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Объем_поставки_цельной_крови)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Объем_поставки_плазмы_крови)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Объем_поставки_имунной_плазмы)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Объем_поставки_эретроцитов_крови)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Объем_поставки_тромбоцитного_концентрата)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_поставки)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Хранилища_крови.Группа_крови)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>